prefix		=@prefix@
exec_prefix	=@exec_prefix@
bindir		=@bindir@
includedir	=@includedir@
libdir		=@libdir@
srcdir		=@srcdir@
VPATH		=@srcdir@

SYSTYPE		=@SYSTYPE@

# compiler names:
CXX		=@CXX@
CC		=@CC@
MAKEDEPEND	=@MAKEDEPEND@

# flags for C++ compiler:
CFLAGS		=@DEBUGFLAG@ -I@srcdir@ $(XTRAFLAGS) @COPTS@ @CFLAGS@
CXXFLAGS	=@DEBUGFLAG@ -I@srcdir@ $(XTRAFLAGS) @CXXOPTS@ @CXXFLAGS@ @X_CFLAGS@
DSOCFLAGS	=@DSOCFLAGS@
DEBUGFLAGS	=@DEBUGFLAG@

# program to make the archive:
LIBNAME		=@LIBNAME@
LIBEXT		=@LIBEXT@
DSOLIBNAME	=@DSOLIBNAME@
DSOLIBformsNAME	=@DSOLIBformsNAME@
DSOLIBimagesNAME=@DSOLIBimagesNAME@
DSOLIBglNAME	=@DSOLIBglNAME@
DSOLIBglutNAME	=@DSOLIBglutNAME@
LIBCOMMAND	=@LIBCOMMAND@
RANLIB		=@RANLIB@
DSOEXT		=@DSOEXT@
DSOSHORTEXT	=@DSOSHORTEXT@
DSOCOMMAND	=@DSOCOMMAND@
THEMECOMMAND	=@THEMECOMMAND@

# libraries to link with:
LDLIBS		=@LDFLAGS@ -L../lib -lfltk @LIBS@ @LDLIBS@ @X_EXTRA_LIBS@ -lm @LD_DLOPEN_FLAGS@
DSOLIBS		=@DSOLIBS@
THEMELIBS	=@THEMELIBS@
THEMEINCLUDE	=@THEMEINCLUDE@
GLDLIBS		=@LDFLAGS@ -L../lib -lfltk_gl -lfltk @LIBS@ @GLLIB@ @LDLIBS@ @X_EXTRA_LIBS@ -lm @LD_DLOPEN_FLAGS@
GLUTLIBS	=@LDFLAGS@ -L../lib -lfltk_glut -lfltk_gl -lfltk @LIBS@ @GLLIB@ @LDLIBS@ @X_EXTRA_LIBS@ -lm @LD_DLOPEN_FLAGS@
FORMSLIBS	=@LDFLAGS@ -L../lib -lfltk_forms -lfltk @LIBS@ @LDLIBS@ @X_EXTRA_LIBS@ -lm @LD_DLOPEN_FLAGS@
IMAGELIBS	=@LIBPNG@ @LIBJPEG@
THREADSLIBS	=@THREADSLIBS@

# Build commands and filename extensions...
.SUFFIXES:	.c .cxx .h .fl .o

.c.o:
	$(CC) -I.. $(CFLAGS) $(COPTS) $< -c

.cxx.o:
	$(CXX) -I.. $(CXXFLAGS) $(CXXOPTS) $< -c

%.shared.o : %.cxx
	$(CXX) -I.. $(DSOCFLAGS) $(CXXFLAGS) $(CXXOPTS) -c $< -o $@
%.shared.o : %.c
	$(CC) -I.. $(DSOCFLAGS) $(CFLAGS) $(COPTS) -c $< -o $@

