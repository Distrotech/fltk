SHELL=/bin/sh

SUBDIRS	=	src images fluid forms OpenGL glut
TESTS	=	test
#PLUGINS=	themes test/plugins
PLUGINS	=	themes

DIRS	=	$(SUBDIRS) $(PLUGINS) $(TESTS)

GENERATED = configure Makefile makeinclude config.h fltk-config

BUILDTARGETS = @BUILDTARGETS@
INSTALLTARGETS = @INSTALLTARGETS@

all: $(GENERATED)
	@for dir in $(DIRS); do\
		echo "=== making $$dir ===";\
		if test ! -f $$dir/makedepend; then\
			touch $$dir/makedepend;\
		fi;\
		(cd $$dir; $(MAKE) $(BUILDTARGETS));\
	done

static: $(GENERATED)
	@for dir in $(DIRS); do\
		echo "=== making $$dir ===";\
		if test ! -f $$dir/makedepend; then\
			touch $$dir/makedepend;\
		fi;\
		(cd $$dir; $(MAKE) static);\
	done

shared: $(GENERATED)
	@for dir in $(DIRS); do\
		echo "=== making $$dir ===";\
		if test ! -f $$dir/makedepend; then\
			touch $$dir/makedepend;\
		fi;\
		(cd $$dir; $(MAKE) shared);\
	done

install: $(GENERATED)
	@for dir in $(DIRS); do\
		echo "=== installing $$dir ===";\
		if test ! -f $$dir/makedepend; then\
			touch $$dir/makedepend;\
		fi;\
		(cd $$dir; $(MAKE) $(INSTALLTARGETS));\
	done

install_static: $(GENERATED)
	@for dir in $(DIRS); do\
		echo "=== making $$dir ===";\
		if test ! -f $$dir/makedepend; then\
			touch $$dir/makedepend;\
		fi;\
		(cd $$dir; $(MAKE) install_static);\
	done

install_shared: $(GENERATED)
	@for dir in $(DIRS); do\
		echo "=== making $$dir ===";\
		if test ! -f $$dir/makedepend; then\
			touch $$dir/makedepend;\
		fi;\
		(cd $$dir; $(MAKE) install_shared);\
	done

install_programs: $(GENERATED)
	@for dir in $(DIRS); do\
		echo "=== making $$dir ===";\
		if test ! -f $$dir/makedepend; then\
			touch $$dir/makedepend;\
		fi;\
		(cd $$dir; $(MAKE) install_programs);\
	done

depend: $(GENERATED)
	@for dir in $(DIRS); do\
		echo "=== making dependencies in $$dir ===";\
		if test ! -f $$dir/makedepend; then\
			touch $$dir/makedepend;\
		fi;\
		(cd $$dir;$(MAKE) depend);\
	done

clean:
	-@ rm -f core config.cache *.o *.bck
	@for dir in $(DIRS); do\
		echo "=== cleaning $$dir ===";\
		(cd $$dir;$(MAKE) clean);\
	done

distclean: clean
	rm -f config.log config.h config.status makeinclude fltk-config
#	@echo "all:" > Makefile
#	@echo "	@echo \"*** You must run ./configure first! ***\"" >> Makefile

$(GENERATED):
	@echo "Please run one of the build scripts to properly update build files"
	@exit 1

