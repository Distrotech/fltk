##
## This is a FLTK style configuration file.
## All items are needed except comments!
##
description = An Alternative FLTK Style           # description of style
author = Carl Thompson (clip@home.net)            # author of style
version = 3                                       # version number of style

[global]                                          # global options
  background red = 192                            # background gray ramp - red
  background green = 192                          # background gray ramp - green
  background blue = 192                           # background gray ramp - blue

[menu item]                                       # menu item attributes
  label type = 0                                  # type number for label font
  label font = 0                                  # font number for label font
  label size = 14                                 # font size for label font
  label color = 0                                 # color for label font (index into palette)
  down label color = 7                            # color of label font when item selected
  down color = 14                                 # color of menu item box when selected
  down box = 7                                    # type of menu item box when selected
  menu title down color = 14                      # color of menu title box when its submenu selected
  menu title down label color = 7                 # color of menu title label when its submenu selected
  menu title down box = 7                         # boxtype of menu title when its submenu selected
  menu title highlight color = 14                 # color of menu title box when mouse is over it
  menu title highlight box = 6                    # boxtype of menu title when mouse is over it
  menu title highlight label color = 7            # color of menu title label when mouse is over it

[browser]                                         # browser attributes
  label color = 0                                 # color of label font
  label size = 14                                 # size of label font
  label type = 0                                  # type number pf label font
  label font = 0                                  # font number of label font
  color = 7                                       # browser background color
  selected color = 14                             # color of selections in browser
  box = 31                                        # boxtype of browser
  text font = 4                                   # font number of browser text
  text size = 14                                  # size of browser text
  text color = 0                                  # color of browser text
  selected text color = 7                         # color of selected browser text

[chart]                                           # chart attributes
  label color = 0                                 # color of label font
  label size = 14                                 # size of label font
  label type = 0                                  # type number pf label font
  label font = 0                                  # font number of label font
  color = 7                                       # chart background color
  color2 = 49                                     # ???
  box = 14                                        # boxtype for chart
  text font = 0                                   # font number for chart text?
  text size = 10                                  # size of chart text?
  text color = 0                                  # color of chart text?

[button]                                          # button attributes
  label color = 0                                 # color of label font
  label size = 14                                 # size of label font
  label type = 0                                  # type number pf label font
  label font = 0                                  # font number of label font
  color = 49                                      # color of button background
  down color = 14                                 # color of button background when selected
  highlight color = 51                            # color of button background when mouse over it
  box = 30                                        # boxtype of button
  down box = 31                                   # boxtype of button when pressed
  highlight box = 30                              # boxtype of button when mouse over it
  down label color = 7                            # color of label text when selected

[check button]                                    # check button attributes (inherits button styles)
  down color = 14                                 # color of light when selected
  down label color = 0                            # color of label text when selected

[round button]                                    # round button attributes (inherits from button)
  down color = 14                                 # color of light when selected
  down label color = 0                            # color of label text when selected

[light button]                                    # light button attributes (inherits from button)
  down color = 1                                  # color of light when selected
  down label color = 0                            # color of label text when selected

[return button]                                   # return button attributes (inherits from button)
  box = 2                                         # boxtype
  highlight box = 2                               # boxtype when mouse over it

[choice]                                          # choice menu attributes
  label color = 0                                 # color of text of menu entries
  label size = 14                                 # size of text of menu entries
  label type = 0                                  # type of font of menu entries
  label font = 0                                  # font of menu entries
  color = 49                                      # color of the choice BUTTON
  down color = 49                                 # color of the choice PULL DOWN MENU WINDOW
  highlight color = 51                            # color of choice button when mouse over it
  box = 30                                        # boxtype of choice button
  highlight box = 30                              # boxtype of choice when mouse is over it
  down box = 30                                   # boxtype of choice pull down menu window
  text font = 0                                   # font of text displayed on choice
  text size = 14                                  # font size of text displayed on choice
  text color = 0                                  # font color of text displayed on choice

[menu bar]                                        # menu bar attributes
  label color = 0                                 # probably does nothing
  label size = 14                                 # probably does nothing
  label type = 0                                  # probably does nothing
  label font = 0                                  # probably does nothing
  color = 49                                      # color of menu bar
  down color = 49                                 # color of pull down menu window
  box = 30                                        # boxtype of menu bar
  down box = 30                                   # boxtype of pull down menu window
  text font = 0                                   # font of shortcuts
  text size = 12                                  # font size of shortcuts
  text color = 0                                  # font color of shortcuts

[menu button]                                     # menu button attributes
  label color = 0                                 # color of label of menu button
  label size = 14                                 # size of label of menu button
  label type = 0                                  # font type of label of menu button
  label font = 0                                  # font number of label of menu button
  color = 49                                      # color of menu button
  down color = 49                                 # color of pull down menu window
  highlight color = 51                            # color of menu button when mouse is over it
  box = 30                                        # boxtype of menu button
  highlight box = 30                              # boxtype of menu button when mouse is over it
  down box = 30                                   # boxtype of pull down menu window
  text font = 0                                   # font of shortcuts?
  text size = 14                                  # font size of shortcuts?
  text color = 0                                  # font color of shortcuts?

[widget]                                          # generic widget attributes (all inherit from this)
  label color = 0                                 # font color of widget label
  label size = 14                                 # font size of widget label
  label type = 0                                  # font type of widget label
  label font = 0                                  # font number of widget label
  color = 49                                      # color of widget
  color2 = 49                                     # may do something depending on the widget
  box = 0                                         # you probably don't want to mess with this

[window]                                          # window attributes
  color = 49                                      # background color of the window
  box = 1                                        # boxtype for window

[slider]                                          # slider attributes
  color = 49                                      # color of slider background area
  color2 = 49                                     # color of the slider button
  highlight color = 51                            # color of the slider button when mouse over it
  box = 31                                        # boxtype of the slider background area
  slider box = 30                                 # boxtype of the slider button

[scroll bar]                                      # scroll bar attributes (inherits from slider)
  color = 46                                      # color of scroll bar background area
  color2 = 49                                     # color of the scroll bar buttons
  highlight color = 51                            # color of the scroll bar buttons when mouse over it
  box = 1                                         # boxtype of the scroll bar background area
  slider box = 30                                 # boxtype of the scroll bar buttons

[text input output]                               # input and output widget attributes
  box = 31                                        # boxtype of the input / output area
  color = 7                                       # background color of input / output area
  text font = 0                                   # font number of input / output text
  text size = 14                                  # size of input / output text
  text color = 0                                  # color of input / output text
  selected color = 14                             # background color of selected input / output text
  selected text color = 7                         # font color of selected input / output text
  cursor color = 0                                # color of the text cursor
  label font = 0                                  # font number of the input / output area's label
  label size = 14                                 # font size of the input / output area's label
  label color = 0                                 # font color of the input / output area's label
  label type = 0                                  # font type of the input / output area's label

[adjuster]                                        # ajuster attributes
  color = 49                                      # color of the adjuster button
  color2 = 0                                      # color of the ajuster arrow symbol on the button
  highlight color = 51                            # color of the adjuster button when mouse over it
  box = 30                                        # boxtype of the adjuster button
  highlight box = 30                              # boxtype of the adjuster buttonwhen mouse is over it

[counter]                                         # counter attributes
  color = 49                                      # color of the counter button
  color2 = 0                                      # color of the counter arrow symbol on the button
  highlight color = 51                            # color of the counter button when mouse over it
  box = 30                                        # boxtype of the adjuster button
  highlight box = 30                              # boxtype of the adjuster button when mouse over it
  box2 = 1                                        # boxtype of the counter's text area
  text font = 0                                   # font number of the counter's text
  text size = 14                                  # font size of the counter's text
  text color = 0                                  # color of the counter's text

[roller]                                          # roller attributes
  color = 49                                      # color of the roller
  box = 30                                        # boxtype of the roller

