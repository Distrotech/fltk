#!/bin/sh

autoconf

# remove the "-mwin32" option if your version of gcc is earlier than 2.95.2-7
#CC="gcc -mno-cygwin -mwin32"
#CXX="g++ -mno-cygwin -mwin32"
CC="gcc -mno-cygwin -mwindows"
CXX="g++ -mno-cygwin -mwindows"
export CC CXX

# In order to find DLLs
PATH=`pwd`/lib:$PATH
export PATH

./configure $*

make clean depend all
