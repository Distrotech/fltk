#ifndef fltk_string_h
#  define fltk_string_h

#  include "FL_API.h"
#  include <stdio.h>
#  include <stdlib.h>
#  include <stdarg.h>


/*
 * Most systems have <string.h>, some have <strings.h>, and some have
 * both.  We need to include both (if available) to get the definitions
 * for strcasecmp() and friends.
 */

#  if @FLTK_STRING_H@
#    include <string.h>
#  endif
#  include <ctype.h>


/*
 * Apparently Unixware defines "index" to strchr (!) rather than
 * providing a proper entry point or not providing the (obsolete)
 * BSD function.  Make sure index is not defined...
 *
 * Similarly, check for "rindex" (for strrchr)...
 */

#  ifdef index
#    undef index
#  endif /* index */

#  ifdef rindex
#    undef rindex
#  endif /* rindex */


/*
 * Windows defines functions called "stricmp" and "strnicmp" which
 * work just like "strcasecmp" and "strncasecmp" under UNIX.
 *
 * Also, the DLL C runtime libraries contain snprintf and vsnprintf
 * functions, but not all linkers add the leading underscore when
 * linking, thus the definition.
 */

#  if (defined(WIN32) && !defined(__CYGWIN__)) || defined(__EMX__)
#    define strcasecmp(s,t)	stricmp((s), (t))
#    define strncasecmp(s,t,n)	strnicmp((s), (t), (n))
#    define vsnprintf		_vsnprintf
#    define snprintf		_snprintf
#  elif @FLTK_STRINGS_H@
#    include <strings.h>
#  endif /* WIN32 */

#  ifdef __cplusplus
extern "C" {
#  endif /* __cplusplus */

/*
 * Define FLTK emulation functions for string functions that aren't
 * universally available: snprintf, strcasecmp, strdup, strlcat, strlcpy,
 * strncasecmp, and vsnprintf.
 *
 * In particular, the strlcat and strlcpy functions are some really
 * useful BSD string functions that work the way strncpy and strncat
 * *should* have worked in the first place.
 */

#  if defined(__APPLE__) && defined(__MWERKS__)
/*
 * MetroWerks' CodeWarrior put thes "non-standard" functions in
 * <extras.h> which unfortunatly does not play well otherwise
 * when included - to be resolved...
 */

extern int  strcasecmp(const char *, const char *);
extern int  strncasecmp(const char *, const char *, int);
extern char *strdup(const char *);
#  else
#    if !@FLTK_STRCASECMP@
FL_API extern int fltk_strcasecmp(const char *, const char *);
#      define strcasecmp fltk_strcasecmp
#    endif
#    if @FLTK_STRNCASECMP@
FL_API extern int fltk_strncasecmp(const char *, const char *, size_t);
#      define strncasecmp fltk_strncasecmp
#    endif
#    if @FLTK_STRDUP@
FL_API extern char *fltk_strdup(const char *);
#      define strdup fltk_strdup
#    endif
#  endif

#  if @FLTK_SNPRINTF@
FL_API extern int fltk_snprintf(char *, size_t, const char *, ...);
#    define snprintf fltk_snprintf
#  endif

#  if @FLTK_VSNPRINTF@
FL_API extern int fltk_vsnprintf(char *, size_t, const char *, va_list ap);
#    define vsnprintf fltk_vsnprintf
#  endif

#  if @FLTK_STRLCAT@
FL_API extern size_t fltk_strlcat(char *, const char *, size_t);
#    define strlcat fltk_strlcat
#  endif

#  if @FLTK_STRLCPY@
FL_API extern size_t fltk_strlcpy(char *, const char *, size_t);
#    define strlcpy fltk_strlcpy
#  endif

#  ifdef __cplusplus
}
#  endif /* __cplusplus */
#endif /* !fltk_string_h */


