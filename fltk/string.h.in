#ifndef fltk_string_h
#  define fltk_string_h

#  include "FL_API.h"
#  include <stdio.h>
#  include <stdlib.h>
#  include <stdarg.h>
#  if @FLTK_STRING_H@
#    include <string.h>
#  endif
#  if @FLTK_STRINGS_H@
#    include <strings.h>
#  endif
#  include <ctype.h>

/*
 * Apparently Unixware defines "index" to strchr (!) rather than
 * providing a proper entry point or not providing the (obsolete)
 * BSD function.  Make sure index is not defined...
 */

#  ifdef index
#    undef index
#  endif /* index */

#  if defined(WIN32) && !defined(__CYGWIN__)
#    define strcasecmp(s,t)	stricmp((s), (t))
#    define strncasecmp(s,t,n)	strnicmp((s), (t), (n))
#  elif defined(__EMX__)
#    define strcasecmp(s,t)	stricmp((s), (t))
#    define strncasecmp(s,t,n)	strnicmp((s), (t), (n))
#  endif /* WIN32 */

#  ifdef __cplusplus
extern "C" {
#  endif /* __cplusplus */

/*
 * MetroWerks' CodeWarrior put thes "non-standard" functions in
 * <extras.h> which unfortunatly does not play well otherwise
 * when included - to be resolved...
 */

#  if defined(__APPLE__) && defined(__MWERKS__)
int strcasecmp(const char*,const char*);
int strncasecmp(const char*,const char*,int);
char *strdup(const char*);
#  else
#    if @FLTK_STRCASECMP@
FL_API extern int fltk_strcasecmp(const char *, const char *);
#      define strcasecmp fltk_strcasecmp
#    endif
#    if @FLTK_STRNCASECMP@
FL_API extern int fltk_strncasecmp(const char *, const char *, size_t);
#      define strncasecmp fltk_strncasecmp
#    endif
#    if @FLTK_STRDUP@
FL_API extern char *fltk_strdup(const char *);
#      define strdup fltk_strdup
#    endif
#  endif

#  if @FLTK_SNPRINTF@
FL_API extern int fltk_snprintf(char *, size_t, const char *, ...);
#    define snprintf fltk_snprintf
#  endif

#  if @FLTK_VSNPRINTF@
FL_API extern int fltk_vsnprintf(char *, size_t, const char *, va_list ap);
#    define vsnprintf fltk_vsnprintf
#  endif

/*
 * strlcpy() and strlcat() are some really useful BSD string functions
 * that work the way strncpy() and strncat() *should* have worked.
 */

#  if @FLTK_STRLCAT@
FL_API extern size_t fltk_strlcat(char *, const char *, size_t);
#    define strlcat fltk_strlcat
#  endif

#  if @FLTK_STRLCPY@
FL_API extern size_t fltk_strlcpy(char *, const char *, size_t);
#    define strlcpy fltk_strlcpy
#  endif

#  ifdef __cplusplus
}
#  endif /* __cplusplus */
#endif /* !fltk_string_h */


